<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.smarttablayoutdemo.MainActivity">
    <android.support.v7.widget.Toolbar
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/mToolBar">
        <RelativeLayout
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:clickable="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/mLeftImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                />
        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/mSmartTabLayout"
            app:stl_indicatorAlwaysInCenter="false"
            app:stl_indicatorWithoutPadding="true"
            app:stl_indicatorInFront="false"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorGravity="bottom"
            app:stl_indicatorColor="#000000"
            app:stl_indicatorThickness="4dp"
            app:stl_indicatorWidth="auto"
            app:stl_indicatorCornerRadius="0dp"
            app:stl_overlineColor="@color/mColorOnew"
            app:stl_overlineThickness="0dp"
            app:stl_underlineColor="@color/mColorTwo"
            app:stl_underlineThickness="0dp"
            app:stl_dividerColor="@color/colorPrimary"
            app:stl_dividerThickness="0dp"
            app:stl_defaultTabTextColor="#000000"
            app:stl_titleOffset="auto_center"
            app:stl_distributeEvenly="true"
            >
        </com.ogaclejapan.smarttablayout.SmartTabLayout>
            <ImageView
                android:layout_centerVertical="true"
                android:clickable="true"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/mSearch"
                android:src="@android:drawable/ic_menu_search"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mToolBar">
    </android.support.v4.view.ViewPager>

</RelativeLayout>
